# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /*somePath/                     controllers.Application.untrail(somePath : String)
GET     /                               controllers.Application.redirect()

GET     /web                            controllers.Application.index()

GET    /api                             controllers.Root.apiRoot()
GET    /api/uuid                        controllers.UuidGenerator.randomUUID()
GET    /api/users                       controllers.User.listUsers(surname ?= null, firstname ?= null, email ?= null)
GET    /api/authentication              controllers.User.authenticate()
POST   /api/documents                   controllers.Document.createDocument()
GET    /api/document-types              controllers.Document.listDocumentTypes(filter ?= null)
#GET    /document/:docType               controllers.Document.listByType(docType: String, sdate ?=null, edate ?= null)

# Map static resources from the /public folder to the /assets URL path
GET     /web/*file                      controllers.Assets.at(path="/public", file)
GET     /assets/*file                   controllers.Assets.at(path="/public", file)
GET     /webjars/*file                  controllers.WebJarAssets.at(file)
GET     /version                        controllers.Application.version()

#Everything else
GET     /$stuff<.*>                      controllers.Application.anything(stuff: String)